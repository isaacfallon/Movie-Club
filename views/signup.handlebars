{{!-- Sign Up Form --}}
<div class="d-flex p-4 justify-content-center mt-5">
  <div class="signup-card w-50">
    <h2 class="text-center">Sign Up</h2>

    <form class="signup-form">
      <div class="form-group">
        <label for="usernameSignup">Username</label>
        <input type="text" class="form-control" id="usernameSignup" placeholder="Enter Username">
      </div>
      <div class="form-group mt-2">
        <label for="passwordSignup">Password</label>
        <input type="password" class="form-control" id="passwordSignup" placeholder="Enter Password">
      </div>
      <div class="mt-2">
        <button type="submit" class="btn btn-primary float-start">Submit</button>
        <a href="/login" class="float-end">Login</a>
      </div>
  </form>
</div>

</div>

<script src="/js/signup.js"></script>